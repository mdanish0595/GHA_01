
##<Syntax>
name: #[Optional][Name of the workflow]

on:   #[Events_Section]
  push: #[Event01]
    branches: #[Event01_Defination]
      - main

permissions: #This section defines fine-grained access controls for the GitHub token that the workflow uses.
  id-token: write #Allows the workflow to request an OpenID Connect (OIDC) token from GitHub.
  contents: read #Grants workflow, read-only access to the repository contents. Required for checkout action.

jobs: #[Workflow_Job_section]
  Deploy_SG:
    runs-on: ubuntu-latest  #Define the runner
    env: #Variable definatin
      AWS_REGION: us-west-2
      TF_WORKING_DIR: ./terraform-sg
    steps: #[This section contains the actions within a job]
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Configure AWS credentials via OIDC
        uses: aws-actions/configure-aws-credentials@v2
        with:
          role-to-assume: arn:aws:iam::211125325120:role/git-role-web-identity-dan
          aws-region: ${{ env.AWS_REGION }}

      - name: Setup Terraform
        uses: hashicorp/setup-terraform@v2

      - name: Terraform Init
        # run: terraform init
        run: terraform -chdir=${{ env.TF_WORKING_DIR }} init

      - name: Terraform Plan
        # run: terraform plan
        run: terraform -chdir=${{ env.TF_WORKING_DIR }} plan

      - name: Terraform Apply
        run: terraform -chdir=${{ env.TF_WORKING_DIR }} apply -auto-approve